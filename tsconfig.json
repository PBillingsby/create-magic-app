{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "./dist",
    "jsx": "react",
    "declaration": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "cli/*": ["cli/*"],
      "scaffolds/*": ["scaffolds/*"],
      "compiled/*": ["compiled/*", "node_modules/@types/*", "node_modules/*"],
    },
  },

  "include": ["cli", "scaffolds", "compiled"],
  "exclude": ["scaffolds/*/template"],
}
