{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "./dist",
    "jsx": "react",
    "declaration": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "core/*": ["core/*"],
      "scaffolds/*": ["scaffolds/*"],
      "compiled/*": ["compiled/*", "node_modules/@types/*", "node_modules/*"],

      // Special case for React because it's a peer dependency of `zombi`
      "react": ["compiled/react", "node_modules/@types/react"],
      "react-is": ["compiled/react-is", "node_modules/@types/react-is"],
    },
  },

  "include": ["core", "scaffolds", "compiled"],
  "exclude": ["scaffolds/*/template"],
}
