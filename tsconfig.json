{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext"],
    "declaration": true,
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"],
}
